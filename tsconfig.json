{
  "compilerOptions": {
    "strict": false,
    "target": "ES6",
    "module": "CommonJS",
    "lib":[
      "ES6"
    ],
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": false,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./lib",
    "rootDir": "./src",
    "outDir": "./lib",
    "moduleResolution": "node",
    "pretty": true,
    "removeComments": false,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
